{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run Tests",
			"type": "shell",
			"command": "bash",
			"args": ["./scripts/shell/test.sh"],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": [],
			"runOptions": {
				"runOn": "default"
			}
		},
		{
			"label": "Build",
			"type": "shell",
			"command": "npm",
			"args": ["run", "build"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": ["$tsc"]
		},
		{
			"label": "Jest: Refresh Tests",
			"type": "shell",
			"command": "node",
			"args": ["./scripts/jest", "--listTests"],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "Docker: Build",
			"type": "shell",
			"command": "npm",
			"args": ["run", "docker:build"],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "Docker: Start Dev Environment",
			"type": "shell",
			"command": "npm",
			"args": ["run", "docker:dev"],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "Docker: Run Tests",
			"type": "shell",
			"command": "npm",
			"args": ["run", "docker:test"],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "Docker: Open Shell",
			"type": "shell",
			"command": "npm",
			"args": ["run", "docker:shell"],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "new"
			},
			"problemMatcher": []
		},
		{
			"label": "Docker: Stop All",
			"type": "shell",
			"command": "npm",
			"args": ["run", "docker:down"],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		}
	]
}
