{
	"compilerOptions": {
		// required
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"downlevelIteration": true,
		"preserveSymlinks": false,
		"jsx": "react",
		"jsxFactory": "Roact.createElement",
		"jsxFragmentFactory": "Roact.createFragment",
		"module": "commonjs",
		"moduleResolution": "Node",
		"noLib": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"moduleDetection": "force",
		"strict": true,
		"target": "ESNext",
		"skipLibCheck": true,
		"typeRoots": ["node_modules/@rbxts", "node_modules/@flamework"],

		// configurable
		"rootDir": "places",
		"outDir": "out",
		"baseUrl": ".",
		"paths": {
			"@common/*": ["places/common/src/*"],
			"@shared/*": [
				"places/common/src/shared/*",
				"places/lobby/src/shared/*",
				"places/afk/src/shared/*",
				"places/gameplay/src/shared/*"
			],
			"@server/*": [
				"places/common/src/server/*",
				"places/lobby/src/server/*",
				"places/afk/src/server/*",
				"places/gameplay/src/server/*"
			],
			"@client/*": [
				"places/common/src/client/*",
				"places/lobby/src/client/*",
				"places/afk/src/client/*",
				"places/gameplay/src/client/*"
			],
			"@network/*": [
				"places/common/remotes/network/*",
				"places/lobby/remotes/network/*",
				"places/afk/remotes/network/*",
				"places/gameplay/remotes/network/*"
			]
		},
		"incremental": true,
		"tsBuildInfoFile": "out/tsconfig.tsbuildinfo",

		"experimentalDecorators": true,
		"plugins": [
			{
				"transform": "rbxts-transformer-flamework",
				"obfuscation": false
			},
			{
				"transform": "rbxts-transformer-optimizer"
			}
		]
	},
	"exclude": ["**/node_modules/**", "**/out/**", "**/include/**", "scripts/**"]
}
